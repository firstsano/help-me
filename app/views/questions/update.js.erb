(function() {
  <%- if @question.errors.present? %>
    let $question = $('<%= j render(@question) %>');
    let $questionForm = $question.find('.question__form');
    $('.question__form').html($questionForm.html());
  <%- else %>
    $('.question').replaceWith('<%= j render(@question) %>');
  <%- end %>
})();
