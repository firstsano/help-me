(function() {
  <%- if @answer.errors.present? %>
    let $answer = $('<%= j render(@answer) %>');
    let $answerForm = $answer.find('.answer__form');
    $('.answer[data-answer-id="<%= @answer.id %>"] .answer__form').html($answerForm.html());
  <%- else %>
    $('.answer[data-answer-id="<%= @answer.id %>"]').replaceWith('<%= j render(@answer) %>');
  <% end %>
})();
